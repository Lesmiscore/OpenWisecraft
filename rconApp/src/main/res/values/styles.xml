<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/upd_2</item>
		<item name="colorAccent">@color/upd_2</item>
		<item name="colorPrimaryDark">@color/upd_1</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:buttonStyle">@style/AppButton</item>
	</style>
	<style name="AppDialog" parent="@style/Theme.AppCompat.Light.Dialog">
		<item name="colorPrimary">@color/upd_2</item>
		<item name="colorAccent">@color/upd_2</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:buttonStyle">@style/AppButton</item>
	</style>
	<style name="AppAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/upd_2</item>
		<item name="colorAccent">@color/upd_2</item>
		<item name="android:buttonStyle">@style/AppButton</item>
	</style>
	
	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	
	<style name="AppButton" parent="@style/Widget.AppCompat.Button.Colored">
		<item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
		<item name="colorButtonNormal">@color/upd_2</item>
		<item name="colorControlNormal">@color/upd_2</item>
	</style>
</resources>
