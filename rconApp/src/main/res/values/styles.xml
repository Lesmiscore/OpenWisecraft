<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="@style/Theme.AppCompat.Light">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/upd_2</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="AppDialog" parent="@style/Theme.AppCompat.Light.Dialog">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/upd_2</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="AppAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/upd_2</item>
	</style>
	
	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	
	<style name="AppTheme.OpenSource" parent="AppTheme.NoActionBar">
		<item name="android:statusBarColor">@color/upd_1</item>
		<item name="colorPrimary">@color/upd_2</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
</resources>
