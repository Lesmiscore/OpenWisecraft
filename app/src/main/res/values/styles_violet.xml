<resources>
    <style name="AppTheme.Violet" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
        <item name="alertDialogTheme">@style/AppAlertDialog.Violet</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Transition</item>
        <item name="wcToolbarTheme">@style/AppTheme.Toolbar.Violet</item>
        <item name="wcDefaultPreferenceTextColor">#000000</item>
        <item name="wcMenuTintColor">#ffffff</item>
        <item name="dialogTheme">@style/AppAlertDialog.Violet</item>
		<item name="toolbarStyle">?attr/wcToolbarTheme</item>
		<item name="wcUnselectedTextColor">#fff</item>
		<item name="wcSelectedTextColor">#000</item>
		<!--MaterialDrawer-->
        <item name="material_drawer_background">?android:attr/windowBackground</item>
        <item name="material_drawer_primary_text">@color/black</item>
        <item name="material_drawer_selected_text">?attr/material_drawer_primary_text</item>
		<!--RCON-->
		<item name="rconConsoleSendButtonStyle">@style/AppButton</item>
		<!--AppButton-->
		<item name="wcAppButtonTextColor">#fff</item>
		<item name="wcAppButtonBgColor">#FF4081</item>
    </style>
    
    <style name="AppDialog.Violet" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
        <item name="wcToolbarTheme">@style/AppTheme.Toolbar.Violet</item>
        <item name="wcDefaultPreferenceTextColor">#000000</item>
        <item name="wcMenuTintColor">#000000</item>
        <item name="dialogTheme">@style/AppAlertDialog.Violet</item>
        <item name="toolbarStyle">?attr/wcToolbarTheme</item>
    </style>
    
    <style name="AppAlertDialog.Violet" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
        <item name="wcToolbarTheme">@style/AppTheme.Toolbar.Violet</item>
        <item name="wcDefaultPreferenceTextColor">#000000</item>
        <item name="wcMenuTintColor">#ffffff</item>
        <item name="dialogTheme">@style/AppAlertDialog.Violet</item>
        <item name="toolbarStyle">?attr/wcToolbarTheme</item>
    </style>
    
    <style name="AppTheme.NoActionBar.Violet" parent="AppTheme.Violet">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
    </style>

    <style name="AppTheme.ServerInfo.Violet" parent="AppTheme.NoActionBar.Violet">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
	<style name="AppTheme.Toolbar.Violet" parent="Widget.AppCompat.Toolbar.Wisecraft">
		<item name="colorControlNormal">#ffffff</item>
		<item name="titleTextColor">#fff</item>
		<item name="android:textColor">#fff</item>
	</style>
</resources>
