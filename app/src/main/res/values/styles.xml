<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Base.AppTheme">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="alertDialogTheme">@style/AppAlertDialog</item>
	</style>
	<style name="AppDialog" parent="Base.AppDialog">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
	</style>
	<style name="AppAlertDialog" parent="Base.AppAlertDialog">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/mainColor</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
	</style>
	
	<style name="AppTheme.NoActionBar" parent="Base.AppTheme.NoActionBar">
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
	</style>
	
	<style name="AppTheme.OpenSource" parent="AppTheme.NoActionBar">
		<item name="android:statusBarColor">@color/upd_1</item>
		<item name="colorPrimary">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="actionBarStyle">@style/WhiteTextActionBar</item>
	</style>
	
	<style name="AppTheme.Toolbar" parent="AppTheme">
		<item name="colorControlNormal">@color/mainColor</item>
		<item name="android:textColorSecondary">@color/mainColor</item>
	</style>
	
	
	
	<style name="AppTheme.Preference" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
		<item name="colorPickerPreferenceStyle">@style/Preference.ColorPickerPreference</item>
		<item name="android:layout">@layout/fragment_settings_content</item>
    </style>
	
	
	
	<style name="AppButton" parent="@style/Widget.AppCompat.Button.Colored">
		<item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
		<item name="colorButtonNormal">@color/mainColor</item>
		<item name="colorControlNormal">@color/mainColor</item>
	</style>
	<style name="AppButton.Inverse">
		<item name="android:textColor">@color/mainColor</item>
		<item name="colorButtonNormal">#fff</item>
		<item name="colorControlNormal">#fff</item>
	</style>
	
	<style name="AppPreferenceTextAppearance" parent="TextAppearance.AppCompat.Medium">
		<item name="android:textColor">#000</item>
	</style>
	

	<style name="WhiteTextActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
		<item name="titleTextStyle">@style/WhiteTitleTextStyle</item>
	</style>

	<style name="WhiteTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/white</item>
	</style>
	
	
	
	<style name="Preference.ColorPickerPreference">
        <item name="android:widgetLayout">@layout/color_picker_preference</item>
    </style>
	
	
	<declare-styleable name="ColorPickerPreferenceCompat">
		<attr name="color"/>
	</declare-styleable>
	
	
	
	
	<!-- Base Styles -->
	<style name="Base.AppTheme" parent="Theme.AppCompat.Light"></style>
	<style name="Base.AppDialog" parent="Theme.AppCompat.Light.Dialog"></style>
	<style name="Base.AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert"></style>
	
	<style name="Base.AppTheme.NoActionBar" parent="Base.AppTheme"><item name="windowActionBar">false</item><item name="windowNoTitle">true</item></style>
</resources>
