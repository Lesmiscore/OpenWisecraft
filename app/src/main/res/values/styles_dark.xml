<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme.Dark" parent="@style/Theme.AppCompat">
		<item name="colorAccent">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
		<item name="android:windowAnimationStyle">@style/AppTheme.Transition</item>
		<item name="wcToolbarTheme">@style/AppTheme.Toolbar.Dark</item>
		<item name="wcDefaultPreferenceTextColor">#ffffff</item>
		<item name="wcMenuTintColor">#ffffff</item>
		<item name="dialogTheme">@style/AppAlertDialog.Dark</item>
	</style>
	<style name="AppDialog.Dark" parent="@style/Theme.AppCompat.Dialog">
		<item name="colorAccent">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="wcToolbarTheme">@style/AppTheme.Toolbar.Dark</item>
		<item name="wcDefaultPreferenceTextColor">#ffffff</item>
		<item name="wcMenuTintColor">#ffffff</item>
		<item name="dialogTheme">@style/AppAlertDialog.Dark</item>
	</style>
	<style name="AppAlertDialog.Dark" parent="@style/Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/mainColor</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="wcToolbarTheme">@style/AppTheme.Toolbar.Dark</item>
		<item name="wcDefaultPreferenceTextColor">#ffffff</item>
		<item name="wcMenuTintColor">#ffffff</item>
		<item name="dialogTheme">@style/AppAlertDialog.Dark</item>
	</style>

	<style name="AppTheme.NoActionBar.Dark" parent="AppTheme.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
	</style>

	<style name="AppTheme.Toolbar.Dark" parent="AppTheme.Dark">
		<item name="colorControlNormal">@color/mainColor</item>
		<item name="android:textColorSecondary">@color/mainColor</item>
	</style>

	<style name="AppTheme.ServerInfo.Dark" parent="AppTheme.NoActionBar.Dark">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
</resources>
