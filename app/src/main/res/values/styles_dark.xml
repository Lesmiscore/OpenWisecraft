<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme.Dark" parent="@style/Theme.AppCompat">
		<!--Default-->
		<item name="colorAccent">@color/mainColor.Dark</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
		<item name="android:windowAnimationStyle">@style/AppTheme.Transition</item>
		<item name="wcToolbarTheme">@style/AppTheme.Widget.ActionBar.Dark</item>
		<item name="wcDefaultPreferenceTextColor">#ffffff</item>
		<item name="wcMenuTintColor">#ffffff</item>
		<item name="dialogTheme">@style/AppAlertDialog.Dark</item>
		<item name="colorControlNormal">#ffffff</item>
		<item name="titleTextColor">?attr/colorControlNormal</item>
		<!--MaterialDrawer-->
		<item name="material_drawer_background">?android:attr/windowBackground</item>
        <item name="material_drawer_primary_text">@color/white</item>
        <item name="material_drawer_selected_text">?attr/material_drawer_primary_text</item>
	</style>
	<style name="AppDialog.Dark" parent="@style/Theme.AppCompat.Dialog">
		<item name="colorAccent">@color/mainColor.Dark</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="wcToolbarTheme">@style/AppTheme.Widget.ActionBar.Dark</item>
		<item name="wcDefaultPreferenceTextColor">#ffffff</item>
		<item name="wcMenuTintColor">#ffffff</item>
		<item name="dialogTheme">@style/AppAlertDialog.Dark</item>
	</style>
	<style name="AppAlertDialog.Dark" parent="@style/Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/mainColor.Dark</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="wcToolbarTheme">@style/AppTheme.Widget.ActionBar.Dark</item>
		<item name="wcDefaultPreferenceTextColor">#ffffff</item>
		<item name="wcMenuTintColor">#ffffff</item>
		<item name="dialogTheme">@style/AppAlertDialog.Dark</item>
	</style>

	<style name="AppTheme.NoActionBar.Dark" parent="AppTheme.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
	</style>

    <style name="AppTheme.Widget.ActionBar.Dark" parent="Widget.AppCompat.ActionBar">
        <item name="theme">@style/AppTheme.ThemeOverlay.ActionBar.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
		<item name="colorControlNormal">@color/mainColor.Dark</item>
		<item name="android:textColorSecondary">@color/mainColor.Dark</item>
	</style>

    <style name="AppTheme.ThemeOverlay.ActionBar.Dark" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

	<style name="AppTheme.ServerInfo.Dark" parent="AppTheme.NoActionBar.Dark">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
</resources>
