<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="@style/Theme.AppCompat.Light">
		<!--Default-->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
		<item name="android:windowAnimationStyle">@style/AppTheme.Transition</item>
		<item name="wcToolbarTheme">@style/AppTheme.Toolbar</item>
		<item name="wcDefaultPreferenceTextColor">#000000</item>
		<item name="wcMenuTintColor">#000000</item>
		<item name="dialogTheme">@style/AppAlertDialog</item>
		<item name="toolbarStyle">?attr/wcToolbarTheme</item>
		<item name="wcUnselectedTextColor">#000</item>
		<item name="wcSelectedTextColor">#000</item>
		<item name="popupTheme">@style/Theme.AppCompat.Light</item>
		<!--MaterialDrawer-->
		<item name="material_drawer_background">?android:attr/windowBackground</item>
        <item name="material_drawer_primary_text">@color/black</item>
        <item name="material_drawer_selected_text">?attr/material_drawer_primary_text</item>
		<!--RCON-->
		<item name="rconConsoleSendButtonStyle">@style/AppButton</item>
		<item name="rconTabColor">@color/mainColor</item>
		<!--AppButton-->
		<item name="wcAppButtonTextColor">#000</item>
		<item name="wcAppButtonBgColor">@color/mainColor</item>
	</style>
	<style name="AppDialog" parent="@style/Theme.AppCompat.Light.Dialog">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="wcToolbarTheme">@style/AppTheme.Toolbar</item>
		<item name="wcDefaultPreferenceTextColor">#000000</item>
		<item name="wcMenuTintColor">#000000</item>
		<item name="dialogTheme">@style/AppAlertDialog</item>
		<item name="toolbarStyle">?attr/wcToolbarTheme</item>
	</style>
	<style name="AppAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/mainColor</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="wcToolbarTheme">@style/AppTheme.Toolbar</item>
		<item name="wcDefaultPreferenceTextColor">#000000</item>
		<item name="wcMenuTintColor">#000000</item>
		<item name="dialogTheme">@style/AppAlertDialog</item>
		<item name="toolbarStyle">?attr/wcToolbarTheme</item>
	</style>

	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
	</style>

	<style name="AppTheme.OpenSource" parent="AppTheme.NoActionBar">
		<item name="android:statusBarColor">@color/accent</item>
		<item name="colorPrimary">@color/mainColor</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="preferenceTheme">@style/AppTheme.Preference</item>
		<item name="actionBarStyle">@style/WhiteTextActionBar</item>
	</style>

	<style name="AppTheme.ServerInfo" parent="AppTheme.NoActionBar">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
	
	<style name="AppTheme.ServerGet" parent="AppTheme.NoActionBar">
		<item name="wcBottomSheetDialogDecor">@layout/server_get_activity_select_servers_dialog_decor</item>
	</style>

	<style name="AppTheme.Translucent" parent="AppTheme.NoActionBar">
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="colorPrimary">@android:color/transparent</item>
		<item name="colorPrimaryDark">@android:color/transparent</item>
		<item name="colorAccent">@android:color/transparent</item>
	</style>

	<style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar.Wisecraft">
		<item name="colorControlNormal">@color/mainColor</item>
		<item name="titleTextColor">#000000</item>
		<item name="android:textColor">#000</item>
	</style>
</resources>
