<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<pref.StartPref
		android:title="@string/settingsAttention"
		android:key=""
		android:enabled="false"
	/>
	<EditTextPreference 
		android:key="parallels" 
		android:title="@string/pingThreads"
		android:inputType="number" 
		android:maxLength="3"
		android:defaultValue="6"
	/>
	<CheckBoxPreference
		android:title="@string/updAnotherThread"
		android:key="updAnotherThread"
	/>
	<PreferenceScreen
		android:title="@string/features">
		<CheckBoxPreference
			android:title="@string/proxy"
			android:key="feature_proxy"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:title="@string/bringOnlinesToTop"
			android:key="feature_bott"
			android:defaultValue="true"
		/>
		<CheckBoxPreference
			android:title="@string/serverFinder"
			android:key="feature_serverFinder"
			android:defaultValue="false"
		/>
		<CheckBoxPreference
			android:title="@string/addServerFromServerListSite"
			android:key="feature_asfsls"
			android:defaultValue="false"
		/>
	</PreferenceScreen>
	<CheckBoxPreference
		android:title="@string/sendInfos"
		android:key="sendInfos"
		android:defaultValue="false"
	/>
	<pref.StartPref
		android:title="@string/serverListStyle"
		android:key="serverListStyle"
	/>
	<pref.StartPref
		android:title="@string/selectFont"
		android:key="selectFont"
	/>
	<PreferenceScreen
		android:title="@string/addServerFromServerListSite"
		android:dependency="feature_asfsls">
		<CheckBoxPreference
			android:title="@string/allowAutoUpdateSLSCode"
			android:key="allowAutoUpdateSLSCode"
			android:defaultValue="false"
		/>
		
	</PreferenceScreen>
</PreferenceScreen>
