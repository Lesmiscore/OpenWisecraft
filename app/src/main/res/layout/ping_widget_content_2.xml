<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#66000000"
        android:gravity="center"
        android:minHeight="70dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:maxHeight="40dp">

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:gravity="center">

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                <TextView
                        style="@style/AppTheme.QuickStatus.SingleLineTextView"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:text="ERROR"
                        android:id="@+id/serverName"
                        android:layout_weight="1.0"
                        android:textColor="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                <TextView
                        style="@style/AppTheme.QuickStatus.SingleLineTextView"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:text="-/-"
                        android:id="@+id/serverPlayers"
                        android:gravity="center"
                        android:layout_weight="1.0"
                        android:textColor="#FFFFFF"/>

                <TextView
                        style="@style/AppTheme.QuickStatus.SingleLineTextView"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:text="@string/notResponding"
                        android:id="@+id/pingMillis"
                        android:gravity="right"
                        android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_height="match_parent"
                    android:layout_width="55dp"
                    android:src="@drawable/ic_launch_white_36dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/openServerStatus"
                    android:scaleType="center"/>

            <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_height="match_parent"
                    android:layout_width="55dp"
                    android:src="@drawable/ic_sync_white_36dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/update"
                    android:scaleType="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

